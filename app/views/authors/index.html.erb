<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between align-items-center">
  <h1>Authors</h1>
  <%= link_to "New author", new_author_path, class: "btn btn-primary me-2" %>
</div>
<div id="authors">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Address</th>
        <th scope="col">Books</th>
        <th scope="col">Photo</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @authors.each do |author|%>
        <tr>
          <td><%= author.name%></td>
          <td><%= author.address%></td>
          <td>
            <% author.books.each do |book| %>
              <%= link_to book.name, book_path(book), class: "btn btn-primary"%>
            <% end %>
          </td>
          <td><%= image_tag author.profile_picture, size: "100x100" %></td>
          <td><%= link_to "Edit", edit_author_path(author), class: "btn btn-outlinewarning" %></td>
          <td><%= link_to "Delete", author_path(author), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
